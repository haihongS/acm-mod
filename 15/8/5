#include<iostream>
#include <cstdio>
#include <cstring>
#include <cstdlib>
#include <string>
#include <cmath>
#include <algorithm>

using namespace std;
const int M=100+9;
const int inf=1<<30;

int storeit[M];
int dp[M][M];
int f[M];

int main()
{
	string duru,goal;
	while(cin>>duru>>goal)
	{
		int len=goal.length();
		memset(dp,0,sizeof(dp));
		for(int j=0;j<len;j++)
		{
			for(int i=j;i>=0;i--)
			{
				dp[i][j]=dp[i+1][j]+1;
				for(int k=i;k<j;k++)
				{
					if(goal[i]==goal[k])
					{
						dp[i][j]=min(dp[i][j],dp[i+1][k]+dp[k+1][j]);
					}
				}
			}
		}
		for(int i=0;i<=len;i++)
			f[i]=dp[0][i];
		f[0]=0;
		for(int i=0;i<len;i++)
		{
			if(duru[i-1]==goal[i-1])
				f[i]=f[i-1];
			else
			{
				for(int j=0;j<i;j++)
				{
					f[i]=min(f[i],f[j]+dp[j+1][i]);
				}
			}
		}
		cout<<f[len-1]<<endl;
	}

	return 0;
}

